# 数据库配置
POSTGRES_DB=fly_print_cloud
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379

# API服务配置
API_PORT=8080

# Admin服务配置
ADMIN_PORT=3000
REACT_APP_API_URL=http://api:8080

# 外部访问配置
EXTERNAL_API_URL=http://192.168.1.144:8080
EXTERNAL_ADMIN_URL=http://192.168.1.144:3000

# 安全配置
# 是否创建默认管理员账户（仅在首次部署时设置为 true）
# 注意：首次部署后请立即设置为 false，避免重复创建
CREATE_DEFAULT_ADMIN=false

# 默认管理员密码（强烈建议设置自定义密码）
# 如果留空，系统会生成随机密码并在启动日志中显示一次
# 示例：DEFAULT_ADMIN_PASSWORD=your_secure_password_123
DEFAULT_ADMIN_PASSWORD=

# OAuth2 配置 - 支持任何 OAuth2 提供商
# Client ID 和 Secret 需要在 OAuth2 提供商处注册获取
OAUTH2_CLIENT_ID=fly-print-admin-console
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret-here

# OAuth2 Endpoints - 根据你的提供商配置
# Keycloak 示例：
OAUTH2_AUTH_URL=http://your-keycloak:8080/realms/master/protocol/openid-connect/auth
OAUTH2_TOKEN_URL=http://your-keycloak:8080/realms/master/protocol/openid-connect/token
OAUTH2_USERINFO_URL=http://your-keycloak:8080/realms/master/protocol/openid-connect/userinfo
# 其他提供商示例：
# Google: https://accounts.google.com/o/oauth2/auth, https://oauth2.googleapis.com/token, https://www.googleapis.com/oauth2/v2/userinfo
# Auth0: https://your-domain.auth0.com/authorize, https://your-domain.auth0.com/oauth/token, https://your-domain.auth0.com/userinfo

# 回调 URI - 必须与 OAuth2 提供商中注册的一致 (使用统一域名)
OAUTH2_REDIRECT_URI=http://192.168.1.156:8000/auth/callback

# Admin Console URL - 认证成功后重定向到管理控制台首页 (使用统一域名)
ADMIN_CONSOLE_URL=http://192.168.1.156:8000